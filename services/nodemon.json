{
  "verbose": false,
  "debug": false,
  "exec": "node --loader ts-node/esm --experimental-specifier-resolution=node ./app.ts",
  "ignore": [
    "node_modules",
    "./test",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*"
  ],
  "events": {
    "restart": ""
  },
  "watch": ["./**/*.ts"],
  "ext": "ts,tsx",
  "inspect": true
}
